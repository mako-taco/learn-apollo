{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "jsRules": {},
  "rules": {
    "align": true,
    "array-type": [true, "array"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "await-promise": true,
    "ban-comma-operator": true,
    "ban-strings-containing": [
      true,
      ["paper.dropbox.com", "please use the constant `PAPER_HOST` from desktop/src/constants.tsx"],
      ["www.dropbox.com", "please use the constant `DROPBOX_HOST` from desktop/src/constants.tsx"]
    ],
    "ban-types": [
      true,
      ["Object", "Avoid using the `Object` type. Did you mean `object`?"],
      ["Boolean", "Avoid using the `Boolean` type. Did you mean `boolean`?"],
      ["Number", "Avoid using the `Number` type. Did you mean `number`?"],
      ["String", "Avoid using the `String` type. Did you mean `string`?"],
      ["Symbol", "Avoid using the `Symbol` type. Did you mean `symbol`?"]
    ],
    "comment-format": false,
    "deprecation": true,
    "encoding": true,
    "import-spacing": false,
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "jsdoc-format": false,
    "linebreak-style": [true, "LF"],
    "max-classes-per-file": false,
    "max-line-length": false,
    "max-non-import-or-comment-line-length": [true, 140],
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "static-method",
          {
            "name": "non-static",
            "kinds": ["constructor", "instance-field", "instance-method"]
          }
        ]
      }
    ],
    "no-any": true,
    "no-consecutive-blank-lines": [true, 2],
    "no-console": [true, "log"],
    "no-duplicate-imports": true,
    "no-duplicate-switch-case": true,
    "no-empty": [true, "allow-empty-catch", "allow-empty-functions"],
    "no-empty-interface": false,
    "no-for-in-array": true,
    "no-import-side-effect": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-irregular-whitespace": true,
    "no-magic-numbers": false,
    "no-non-null-assertion": true,
    "no-object-literal-type-assertion": true,
    "no-return-await": true,
    "no-sparse-arrays": true,
    "no-string-literal": false,
    "no-this-assignment": true,
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-type-assertion": true,
    "no-relative-imports": true,
    "objet-curly-spacing": false,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": false,
    "only-arrow-functions": false,
    "ordered-imports": false,
    "prefer-object-spread": true,
    "prefer-template": true,
    "quotemark": [true, "single", "jsx-double", "avoid-template", "avoid-escape"],
    "restrict-plus-operands": true,
    "return-undefined": true,
    "semicolon": [true, "always"],
    "space-within-parens": false,
    "strict-type-predicates": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "arrays": "always",
          "objects": "always",
          "functions": "never",
          "imports": "always",
          "exports": "always",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "triple-equals": true,
    "type-literal-delimiter": true,
    "typedef": true,
    "variable-name": [true, "check-format", "ban-keywords", "allow-pascal-case"],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ]
  },
  "rulesDirectory": []
}
